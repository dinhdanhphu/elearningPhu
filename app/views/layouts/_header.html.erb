<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "JAPANESE", root_path, id: "logo" %>
      <%= link_to "Elearning Website", root_path, class: "brand" %>
      <nav>
        <ul class="nav pull-right">
          <% if user_signed_in? %>
            <li><%= link_to "Dashboard", "" %></li>
            <li><%= link_to "Lessons", "" %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", "" %></li>
                <li><%= link_to "Settings", "" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", destroy_user_session_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <%= form_tag(user_session_path, class: "navbar-form pull-right") do %>
              <%= text_field_tag :email, nil, placeholder: "email", class: "span2" %>
              <%= password_field_tag :password, nil,  placeholder: "password", class: "span2" %>
              <%= submit_tag "Log In", class: "btn" %>
            <% end %>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>